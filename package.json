{
  "name": "@tuulbelt/test-flakiness-detector",
  "version": "0.1.0",
  "description": "Detect unreliable tests by running them multiple times and tracking failure rates",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "flaky": "./src/index.ts",
    "test-flakiness-detector": "./src/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "node --import tsx --test test/index.test.ts test/integration.test.ts test/stress.test.ts test/fuzzy.test.ts",
    "test:unit": "node --import tsx --test test/index.test.ts",
    "test:integration": "node --import tsx --test test/integration.test.ts",
    "test:stress": "node --import tsx --test test/stress.test.ts",
    "test:fuzzy": "node --import tsx --test test/fuzzy.test.ts",
    "test:watch": "node --import tsx --test --watch test/index.test.ts test/integration.test.ts test/stress.test.ts test/fuzzy.test.ts"
  },
  "keywords": [
    "tuulbelt",
    "testing",
    "flakiness",
    "test-reliability"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuulbelt/test-flakiness-detector.git"
  },
  "homepage": "https://github.com/tuulbelt/test-flakiness-detector#readme",
  "bugs": {
    "url": "https://github.com/tuulbelt/tuulbelt/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tuulbelt/cli-progress-reporting": "git+https://github.com/tuulbelt/cli-progress-reporting.git"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.4"
  }
}
